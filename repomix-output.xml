    status_dict = {status: count for status, count in status_counts}
    
    return {
        "total_applications": sum(status_dict.values()),
        "pending_review": sum(
            status_dict.get(status, 0) 
            for status in ["submitted", "document_review", "background_check", "officer_review"]
