          {documentsRequired && (
            <button
              onClick={onNavigateToDocuments}
              className="px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-colors"
            >
              <Upload className="w-4 h-4 inline mr-1" />
              Upload Documents
