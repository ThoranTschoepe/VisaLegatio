}

/* Responsive improvements */
@media (max-width: 640px) {
  .container {
    @apply px-4;
  }
  
  h1 {
    @apply text-xl;
  }
  
  h2 {
    @apply text-lg;
  }
}

/* Enhanced focus styles for accessibility */
:focus-visible {
  @apply ring-2 ring-primary ring-offset-2 ring-offset-base-100;
}

/* Print styles */
@media print {
